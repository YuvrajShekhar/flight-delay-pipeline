# --- Kafka ---
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC=flight-records-raw
KAFKA_REPLICATION_FACTOR=2
KAFKA_PARTITIONS=3

# --- MinIO ---
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=yuvi@123
MINIO_ENDPOINT=http://minio:9000
MINIO_BUCKET=flight-data

# --- PostgreSQL ---
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=flight_features
POSTGRES_USER=spark_user
POSTGRES_PASSWORD=changeme_spark_password
POSTGRES_ML_USER=ml_readonly
POSTGRES_ML_PASSWORD=changeme_ml_password

# --- Apache Airflow ---
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://airflow:changeme_airflow_password@postgres/airflow
AIRFLOW__CORE__FERNET_KEY=changeme_generate_with_python_cryptography
AIRFLOW__WEBSERVER__SECRET_KEY=changeme_secret_key
AIRFLOW_ADMIN_USERNAME=admin
AIRFLOW_ADMIN_PASSWORD=changeme_airflow_ui_password

# --- Data Paths ---
DATA_LOCAL_PATH=/opt/airflow/data
MINIO_RAW_PREFIX=raw/year=2015
